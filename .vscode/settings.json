{
  "[*]": {
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "always",
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "sortImports.path": "isort"
  },
}
